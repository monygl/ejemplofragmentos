    <FrameLayout
        android:id="@+id/detalles"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/detailsElementBackground">
    </FrameLayout>


</LinearLayout>